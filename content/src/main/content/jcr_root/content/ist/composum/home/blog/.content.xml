<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cpp="http://sling.composum.com/pages/1.0"
        xmlns:jcr="http://www.jcp.org/jcr/1.0"
        xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
        xmlns:sling="http://sling.apache.org/jcr/sling/1.0"
        jcr:primaryType="cpp:Page">
    <jcr:content
            jcr:primaryType="cpp:PageContent"
            sling:resourceType="composum/pages/options/blog/components/page/blog"
            path="/content/ist/composum/home/blog/jcr:content"
            template="ist/composum/templates/blog/root">
        <navigation
                jcr:primaryType="nt:unstructured"
                isNavRoot="{Boolean}true"
                title="Blog"/>
        <style
                jcr:primaryType="nt:unstructured"
                theme="ist/composum/themes/blog"/>
        <top
                jcr:primaryType="cpp:Container"
                sling:resourceType="composum/pages/components/container/iparsys">
            <title
                    jcr:primaryType="cpp:Element"
                    sling:resourceType="composum/pages/components/element/title"
                    subtitle="various aspects of the Composum world"
                    title="Composum Blog">
                <image
                        jcr:primaryType="nt:unstructured"
                        imageRef="/content/ist/composum/assets/background/synchlotron.jpg"/>
            </title>
        </top>
        <main
                jcr:primaryType="cpp:Container"
                sling:resourceType="composum/pages/components/container/parsys">
            <search
                    jcr:primaryType="cpp:Element"
                    sling:resourceType="composum/pages/options/blog/components/collection/search"
                    period="about"/>
        </main>
        <aside
                jcr:primaryType="cpp:Container"
                sling:resourceType="composum/pages/components/container/iparsys"/>
        <bottom
                jcr:primaryType="cpp:Container"
                sling:resourceType="composum/pages/components/container/iparsys"/>
    </jcr:content>
    <hello/>
    <customizing/>
    <pages/>
    <nodes/>
    <platform/>
</jcr:root>
