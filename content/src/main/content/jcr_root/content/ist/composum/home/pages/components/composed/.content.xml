                                level="danger">
                            <text
                                    jcr:primaryType="cpp:Element"
                                    sling:resourceType="composum/pages/components/element/text"
                                    text="A section with a text element within as a 'warning' decorated panel."/>
                        </section1>
                        <text1
                                jcr:primaryType="cpp:Element"
                                sling:resourceType="composum/pages/components/element/text"
                                text="Each column of this page contains a set of sections one for each component type. Sections can be nested; the examples are nested sections inside of the 'Section' which is describing the 'Section' component."/>
                    </section1>
                    <section
                            jcr:primaryType="cpp:Container"
                            sling:resourceType="composum/pages/components/container/section"
                            jcr:title="Accordion">
                        <accordion
                                jcr:primaryType="cpp:Container"
                                sling:resourceType="composum/pages/components/composed/accordion">
                            <item
                                    jcr:primaryType="cpp:Container"
                                    sling:resourceType="composum/pages/components/composed/accordion/item"
                                    initialOpen="{Boolean}true"
                                    title="The first Item">
                                <text1
                                        jcr:primaryType="cpp:Element"
                                        sling:resourceType="composum/pages/components/element/text"
                                        text="&lt;p>An accordion is a set of collapsible elements. There are three options / variations of an accordion&lt;/p>&lt;ul>&lt;li>independent:&lt;br>each element in the accordion can be collapsed and expanded independently&lt;/li>&lt;li>accordion (default):&lt;br>only one element can be opened at a time; opening an element is closing each other element automatically&lt;/li>&lt;li>tabbed:&lt;br>the items are lined up as tab navigation elements; this variation is probably not so responsive&lt;/li>&lt;/ul>&lt;p>The elements of an accordion are paragraph systems of (normally simpler) element types.&lt;/p>"/>
                                <text
                                        jcr:primaryType="cpp:Element"
                                        sling:resourceType="composum/pages/components/element/text"
                                        text="This first item is configured as the initial open item in this accordion."/>
                            </item>
                            <item_1446513849
                                    jcr:primaryType="cpp:Container"
                                    sling:resourceType="composum/pages/components/composed/accordion/item"
                                    title="The 2nd Item">
                                <image
                                        jcr:primaryType="cpp:Element"
                                        sling:resourceType="composum/pages/components/element/image"
                                        imageRef="/content/ist/composum/assets/adaptto/slide-platform-filter.png"
                                        title="The 2nd Item"/>
                            </item_1446513849>
                        </accordion>
                        <accordion_800373696
                                jcr:primaryType="cpp:Container"
                                sling:resourceType="composum/pages/components/composed/accordion"
                                behavior="tabbed">
                            <item
                                    jcr:primaryType="cpp:Container"
                                    sling:resourceType="composum/pages/components/composed/accordion/item"
                                    initialOpen="{Boolean}true"
                                    title="Tab 01">
                                <text
                                        jcr:primaryType="cpp:Element"
                                        sling:resourceType="composum/pages/components/element/text"
                                        text="The 'tabbed' variation of an accordion... - tab #1"/>
                            </item>
                            <item_1344565218
                                    jcr:primaryType="cpp:Container"
                                    sling:resourceType="composum/pages/components/composed/accordion/item"
                                    title="Tab 02">
                                <text
                                        jcr:primaryType="cpp:Element"
                                        sling:resourceType="composum/pages/components/element/text"
                                        text="&lt;p>The 'tabbed' variation of an accordion... - tab #2&lt;/p>"/>
                            </item_1344565218>
                            <item_650515992
                                    jcr:primaryType="cpp:Container"
