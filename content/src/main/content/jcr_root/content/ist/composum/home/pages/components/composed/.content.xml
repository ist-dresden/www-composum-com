                    sling:resourceType="composum/pages/components/container/row"
                    columns="-6--6-">
                <column-0
                        jcr:primaryType="cpp:Container"
                        sling:resourceType="composum/pages/components/container/row/column">
                    <section1
                            jcr:primaryType="cpp:Container"
                            sling:resourceType="composum/pages/components/container/section"
                            jcr:title="Section">
                        <text
                                jcr:primaryType="cpp:Element"
                                sling:resourceType="composum/pages/components/element/text"
                                text="A section component is a universal container to combine a set of elements. Such a section can be move, copied and referenced will all the elements within. There are some decoration options available to improve the attention or the recognition value of a section."/>
                        <section
                                jcr:primaryType="cpp:Container"
                                sling:resourceType="composum/pages/components/container/section"
                                jcr:title="#1 Section Example - Title and Symbol"
                                icon="graduation-cap">
                            <text
                                    jcr:primaryType="cpp:Element"
                                    sling:resourceType="composum/pages/components/element/text"
                                    text="A section with a text element within and a symbol to merk the section."/>
                        </section>
                        <section1
                                jcr:primaryType="cpp:Container"
                                sling:resourceType="composum/pages/components/container/section"
