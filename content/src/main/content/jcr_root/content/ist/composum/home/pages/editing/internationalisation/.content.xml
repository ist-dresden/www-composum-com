<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cpp="http://sling.composum.com/pages/1.0"
        xmlns:jcr="http://www.jcp.org/jcr/1.0"
        xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
        xmlns:sling="http://sling.apache.org/jcr/sling/1.0"
        jcr:primaryType="cpp:Page">
    <jcr:content
            jcr:primaryType="cpp:PageContent"
            sling:resourceType="composum/pages/components/page"
            jcr:description="How internationalisation is supported and how can i configure internationalisation aspects of sites, components and content page,."
            jcr:title="Internationalisation"
            template="/apps/ist/composum/templates/page/content">
        <top
                jcr:primaryType="cpp:Container"
                sling:resourceType="composum/pages/components/container/parsys">
            <title
                    jcr:primaryType="cpp:Element"
                    sling:resourceType="composum/pages/components/element/title"
                    title="Internationalisation">
                <image
                        jcr:primaryType="nt:unstructured"
                        imageRef="/content/ist/composum/assets/background/apres_midi_dun_faune.jpg"/>
            </title>
        </top>
        <main
                jcr:primaryType="cpp:Container"
                sling:resourceType="composum/pages/components/container/parsys">
            <row
                    jcr:primaryType="cpp:Container"
                    sling:resourceType="composum/pages/components/container/row"
                    columns="-12-">
                <column-0
                        jcr:primaryType="cpp:Container"
                        sling:resourceType="composum/pages/components/container/row/column">
                    <text
                            jcr:primaryType="cpp:Element"
                            sling:resourceType="composum/pages/components/element/text"
                            text="&lt;p>The internationalisation (I18N) of content is supported mainly by the content properties. Each content resource ist storing the property values in the default language of the site and language variations are stored in properties of the same name in '/i18n/&lt;language>' subnodes of the resource.&lt;/language>&lt;/p>&lt;p>This general approach can be combined with page language split. Each page can be reduced to support a subset of the languages configured for the site and the other languages can be supported by a similar sibling.&amp;nbsp;&amp;nbsp;&lt;/p>"
                            textAlignment="left"/>
                    <title
                            jcr:primaryType="cpp:Element"
                            sling:resourceType="composum/pages/components/element/title"
                            title="Site configuration">
                        <image
                                jcr:primaryType="nt:unstructured"/>
                    </title>
                </column-0>
            </row>
            <row_1911273540
                    jcr:primaryType="cpp:Container"
                    sling:resourceType="composum/pages/components/container/row"
                    columns="-6--6-">
                <column-0
                        jcr:primaryType="cpp:Container"
                        sling:resourceType="composum/pages/components/container/row/column">
                    <text
                            jcr:primaryType="cpp:Element"
                            sling:resourceType="composum/pages/components/element/text"
                            text="Each site defines their own supported language set. This language set is used by pages and components to determine which languages can be edited.&amp;nbsp;"
                            textAlignment="left"/>
                </column-0>
            </row_1911273540>
            <row_2002210319
                    jcr:primaryType="cpp:Container"
                    sling:resourceType="composum/pages/components/container/row"
                    columns="-12-">
                <column-0
                        jcr:primaryType="cpp:Container"
                        sling:resourceType="composum/pages/components/container/row/column">
                    <title
                            jcr:primaryType="cpp:Element"
                            sling:resourceType="composum/pages/components/element/title"
                            title="Language variations of properties">
                        <image
                                jcr:primaryType="nt:unstructured"/>
                    </title>
                </column-0>
            </row_2002210319>
            <row_1278283003
                    jcr:primaryType="cpp:Container"
                    sling:resourceType="composum/pages/components/container/row"
                    columns="-6--6-">
                <column-0
                        jcr:primaryType="cpp:Container"
                        sling:resourceType="composum/pages/components/container/row/column">
                    <text
                            jcr:primaryType="cpp:Element"
                            sling:resourceType="composum/pages/components/element/text"
                            text="&lt;p>A resource property is ‚declared‘ by the edit dialog of a component. Such a declaration by a property edit widget can be decorated with the modifier attribute ‚i18n‘.&lt;/p>"
                            textAlignment="left"/>
                    <text_2116713848
                            jcr:primaryType="cpp:Element"
                            sling:resourceType="composum/pages/components/element/text"
                            text="The dialog template of the ‚text‘ componetent illustrates the property declaration:"
                            textAlignment="left"/>
                    <codeblock
                            jcr:primaryType="cpp:Element"
                            sling:resourceType="composum/pages/components/element/codeblock"
                            bordered="{Boolean}true"
                            codeRef="/libs/composum/pages/components/element/text/edit/dialog/dialog.jsp"
                            collapsed="medium"
                            collapsible="{Boolean}true"
                            language="jsp"
                            showLanguage="{Boolean}true"
                            title="Text component dialog"/>
                    <text_2078989762
                            jcr:primaryType="cpp:Element"
                            sling:resourceType="composum/pages/components/element/text"
                            text="The properties ‚title‘ and ‚text‘ are mareked with ‚i18n=„true“‘ and a variation of their value can be specified for each language of the site."
                            textAlignment="left"/>
                </column-0>
            </row_1278283003>
            <row_1236535696
                    jcr:primaryType="cpp:Container"
                    sling:resourceType="composum/pages/components/container/row"
                    columns="-12-">
                <column-0
                        jcr:primaryType="cpp:Container"
                        sling:resourceType="composum/pages/components/container/row/column">
                    <title
                            jcr:primaryType="cpp:Element"
                            sling:resourceType="composum/pages/components/element/title"
                            title="Language dependent pages">
                        <image
                                jcr:primaryType="nt:unstructured"/>
                    </title>
                </column-0>
            </row_1236535696>
            <row_140669123
                    jcr:primaryType="cpp:Container"
                    sling:resourceType="composum/pages/components/container/row"
                    columns="-6--6-"/>
        </main>
    </jcr:content>
</jcr:root>
