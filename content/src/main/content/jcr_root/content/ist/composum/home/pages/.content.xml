<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cpp="http://sling.composum.com/pages/1.0"
        xmlns:jcr="http://www.jcp.org/jcr/1.0"
        xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
        xmlns:sling="http://sling.apache.org/jcr/sling/1.0"
        jcr:primaryType="cpp:Page">
    <jcr:content
            jcr:primaryType="cpp:PageContent"
            sling:resourceType="composum/pages/components/page/home"
            jcr:description="&lt;p>Content Management and more - create your own CMS - fast and flexible - 'Pages' the powerful CMS engine - bring back the fun to Content Management&lt;/p>"
            jcr:title="Composum Pages"
            template="/apps/ist/composum/templates/page/content">
        <stage
                jcr:primaryType="cpp:Container"
                sling:resourceType="composum/pages/components/composed/carousel"
                autoStart="{Boolean}true"
                interval="15000"
                showIndicators="{Boolean}true"
                useControls="{Boolean}true">
            <teaser-01
                    jcr:primaryType="cpp:Element"
                    sling:resourceType="composum/pages/components/element/teaser"
                    link="/content/ist/composum/home/pages/editing"
                    text="&lt;ul>&lt;li>various views to to navigate content structure&lt;/li>&lt;li>content editing using component related dialogs&lt;/li>&lt;li>add, remove or reorder elements in the tree, the page or in the context view&lt;/li>&lt;li>add component instances or assets via drag and drop from their selections views&lt;/li>&lt;/ul>"
                    title="Content Pages"
                    variation="bgimage">
                <i18n
                        jcr:primaryType="nt:unstructured">
                    <de
                            jcr:primaryType="nt:unstructured"/>
                </i18n>
                <image
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="composum/pages/components/element/image"
                        imageRef="/content/ist/composum/assets/background/synchlotron.jpg">
                    <i18n
                            jcr:primaryType="nt:unstructured">
                        <de
                                jcr:primaryType="nt:unstructured"/>
                    </i18n>
                </image>
            </teaser-01>
            <teaser-02
                    jcr:primaryType="cpp:Element"
                    sling:resourceType="composum/pages/components/element/teaser"
                    link="/content/ist/composum/home/pages/editing/sites"
                    text="&lt;ul>&lt;li>for each site a status view is available&lt;/li>&lt;li>all open and unreleased resources are listed and can be managed&lt;br>&lt;/li>&lt;li>from the sites view you can create and manage content releases&lt;br>&lt;/li>&lt;li>the version history of each content page can be managed&lt;/li>&lt;/ul>"
                    title="Content Sites"
                    variation="bgimage">
                <image
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="composum/pages/components/element/image"
                        imageRef="/content/ist/composum/assets/background/gravitational_waves.jpg"/>
            </teaser-02>
            <teaser-03
                    jcr:primaryType="cpp:Element"
                    sling:resourceType="composum/pages/components/element/teaser"
                    link="/content/ist/composum/home/pages/development"
                    text="&lt;ul>&lt;li>everything a is a Sling component (dialogs, toolbars, ...)&lt;/li>&lt;li>each component can be edited within the Pages UI&lt;br>&lt;/li>&lt;li>all platform specific code is hided behind the Pages taglib&lt;/li>&lt;li>component help pages can be edited like content pages&lt;br>&lt;/li>&lt;/ul>"
                    title="Development"
                    variation="bgimage">
                <image
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="composum/pages/components/element/image"
                        imageRef="/content/ist/composum/assets/background/history_of_pi.jpg"/>
            </teaser-03>
            <teaser
                    jcr:primaryType="cpp:Element"
                    sling:resourceType="composum/pages/components/element/teaser"
                    link="/content/ist/composum/home/pages/editing/Composum-AI"
                    text="&lt;p>&lt;/p>&lt;ul>&lt;li>Supports content creation with artificial intelligence&lt;/li>&lt;li>Assistants for content creation, translation, and page categorization&lt;/li>&lt;li>Translation Dialog for easy translation of text attributes into different languages&lt;/li>&lt;li>Page category assistant suggests SEO keywords based on page content&lt;/li>&lt;li>Content creation assistant provides tips and tricks for generating and improving text&lt;/li>&lt;/ul>&lt;p>&lt;/p>"
                    title="Composum AI"
                    variation="bgimage">
                <image
                        jcr:primaryType="nt:unstructured"
                        imageRef="/content/ist/composum/assets/background/apres_midi_dun_faune.jpg"/>
            </teaser>
        </stage>
        <navigation
                jcr:primaryType="nt:unstructured"
                title="Pages"/>
        <main
                jcr:primaryType="cpp:Container"
                sling:resourceType="composum/pages/components/container/parsys">
            <pages
                    jcr:primaryType="cpp:Element"
                    sling:resourceType="composum/pages/components/element/title"
                    subtitle="bring back the fun to content management"
                    title="Pages">
                <image
                        jcr:primaryType="nt:unstructured"/>
            </pages>
            <row-1
                    jcr:primaryType="cpp:Container"
                    sling:resourceType="composum/pages/components/container/row"
                    columns="-12-">
                <column-0
                        jcr:primaryType="cpp:Container"
                        sling:resourceType="composum/pages/components/container/row/column">
                    <text
                            jcr:primaryType="cpp:Element"
                            sling:resourceType="composum/pages/components/element/text"
                            text="&lt;p>Composum Pages is the content management feature of the Composum Platform. This module supports the creation and manipulation of content pages as arrangements of content components. The Pages feature defines a framework to implement editable Sling components. The editing user interface of Composum Pages is a powerful tool to set up sites, create and manage pages and to edit the pages content.&lt;/p>"/>
                </column-0>
            </row-1>
            <row-2
                    jcr:primaryType="cpp:Container"
                    sling:resourceType="composum/pages/components/container/row"
                    columns="-6--6-">
                <column-0
                        jcr:primaryType="cpp:Container"
                        sling:resourceType="composum/pages/components/container/row/column">
                    <section
                            jcr:primaryType="cpp:Container"
                            sling:resourceType="composum/pages/components/container/section"
                            jcr:title="Features">
                        <text
                                jcr:primaryType="cpp:Element"
                                sling:resourceType="composum/pages/components/element/text"
                                text="&lt;p>Pages is the content management module of Composum which is providing an user interface to manipulate your content in an intuitive way. The content in the Composum Pages CMS is organised in&lt;/p>&lt;ul>&lt;li>Sites:&lt;br>the managing entry point to one site on the platform which contains all pages and assets and declares the releases, languages and all settings for the pages of that site&lt;/li>&lt;li>Pages:&lt;br>a page represents a page in the Web; the page hierarchy determines the navigation of a site; pages are versioned and the versions of the pages are organised in the site releases&lt;/li>&lt;li>Containers and Elements:&lt;br>the content pieces of a page are arranged in containers placed on a page with more or less complex content elements within&lt;/li>&lt;/ul>"/>
                        <text_1135960849
                                jcr:primaryType="cpp:Element"
                                sling:resourceType="composum/pages/components/element/text"
                                text="The pages content is edited in a modularised and customizable user interface:"/>
                        <illustration-01
                                jcr:primaryType="cpp:Element"
                                sling:resourceType="composum/pages/components/composed/illustration">
                            <i18n
                                    jcr:primaryType="nt:unstructured">
                                <de
                                        jcr:primaryType="nt:unstructured">
                                    <image
                                            jcr:primaryType="nt:unstructured"/>
                                </de>
                            </i18n>
                            <_x0031__1476294347368
                                    jcr:primaryType="cpp:Element"
                                    sling:resourceType="composum/pages/components/composed/illustration/annotation"
                                    next="next"
                                    text="&lt;p>You can browse through your content repository using the tree on the left sidebar. Each site or page can be selected here. The selected page is than shown in edit frame (2) in the middle of the edit view. The left area is offering tools to search pages, to find and insert assets and to choice and insert components.&lt;/p>"
                                    title="Content Navigation"
                                    visible="{Boolean}true">
                                <i18n
                                        jcr:primaryType="nt:unstructured">
                                    <de
                                            jcr:primaryType="nt:unstructured"/>
                                </i18n>
                                <shape
                                        jcr:primaryType="nt:unstructured"
                                        level="warning"
                                        offset="-12"
                                        placement="bottom"
                                        position.x="20"
                                        position.y="20"
                                        size.width="50"
                                        type="roundrect"/>
                            </_x0031__1476294347368>
                            <_x0031__1476448542217
                                    jcr:primaryType="cpp:Element"
                                    sling:resourceType="composum/pages/components/composed/illustration/annotation"
                                    next="next"
                                    text="&lt;p>In the central edit frame the selected page is shown for content editing. You can select each editable element on the page. The toolbar on the top (3) offers always the available actions to make changes on the selected element. These actions are available also on the selection headline of the marked element and in the toolbar of the context tools container view.&lt;/p>"
                                    title="Edit Frame">
                                <i18n
                                        jcr:primaryType="nt:unstructured">
                                    <de
                                            jcr:primaryType="nt:unstructured"
                                            label="anno #5"/>
                                </i18n>
                                <shape
                                        jcr:primaryType="nt:unstructured"
                                        level="warning"
                                        placement="top"
                                        position.x="49"
                                        position.y="61"
                                        size.width="50"
                                        type="roundrect"/>
                            </_x0031__1476448542217>
                            <_x0031__1476448542216
                                    jcr:primaryType="cpp:Element"
                                    sling:resourceType="composum/pages/components/composed/illustration/annotation"
                                    next="next"
                                    text="&lt;p>The toolbar at the top of the edit frame allows the selection af the language to edit, the switch between the edit modes and offers the available edit actions for the selected content element. If no element is selected the actions for the current page are available in the edit toolbar.&lt;/p>"
                                    title="Edit Toolbar">
                                <i18n
                                        jcr:primaryType="nt:unstructured">
                                    <de
                                            jcr:primaryType="nt:unstructured"
                                            label="anno #4"
                                            title="Titel (deutsch)"/>
                                </i18n>
                                <shape
                                        jcr:primaryType="nt:unstructured"
                                        level="warning"
                                        offset="-20"
                                        placement="bottom"
                                        position.x="63"
                                        position.y="5"
                                        size.width="40"
                                        type="roundrect"/>
                            </_x0031__1476448542216>
                            <_x0031__1476448542214
                                    jcr:primaryType="cpp:Element"
                                    sling:resourceType="composum/pages/components/composed/illustration/annotation"
                                    next="next"
                                    text="&lt;p>On the right side the context tools are shown. These tools are depending on the current selection. In case of selection change on one of the other views the context tools designated for the selected element with its data are shown.&lt;/p>"
                                    title="Context Tools">
                                <i18n
                                        jcr:primaryType="nt:unstructured">
                                    <de
                                            jcr:primaryType="nt:unstructured"
                                            label="anno #2"
                                            title="Titel (deutsch)"/>
                                </i18n>
                                <shape
                                        jcr:primaryType="nt:unstructured"
                                        level="warning"
                                        placement="top"
                                        position.x="85"
                                        position.y="70"
                                        size.width="40"
                                        type="roundrect"/>
                            </_x0031__1476448542214>
                            <image
                                    jcr:primaryType="nt:unstructured"
                                    imageRef="/content/ist/composum/assets/pages/composum-pages-edit-view.jpg"/>
                            <shape
                                    jcr:primaryType="nt:unstructured"
                                    behavior="accordion"/>
                            <annotation
                                    jcr:primaryType="cpp:Element"
                                    sling:resourceType="composum/pages/components/composed/illustration/annotation"
                                    text="The current site is displayed at the bottom of the navigation left area. Via the site manage dialog available here (the right action) the sites can be managed and switched."
                                    title="Current Site">
                                <shape
                                        jcr:primaryType="nt:unstructured"
                                        level="warning"
                                        position.x="24"
                                        position.y="92"
                                        type="roundrect"/>
                            </annotation>
                        </illustration-01>
                    </section>
                </column-0>
                <column-1
                        jcr:primaryType="cpp:Container"
                        sling:resourceType="composum/pages/components/container/row/column">
                    <text_553173455
                            jcr:primaryType="cpp:Element"
                            sling:resourceType="composum/pages/components/element/text"
                            text="&lt;p>The Composum Pages CMS supports:&lt;/p>&lt;ul>&lt;li>publishing of site releases with a 'public and &amp;nbsp;'preview' stage&lt;/li>&lt;li>internationalization on the property and/or the page level&lt;/li>&lt;li>a modularised organisation of client side resources (CSS, JS)&lt;/li>&lt;li>content structure templates and page content design rules&lt;/li>&lt;li>custom content components available in the CMS editing user interface&lt;/li>&lt;li>the extension of the CMS user interface using Sling components&lt;/li>&lt;li>AI support for the editor&lt;/li>&lt;/ul>"/>
                    <teaser
                            jcr:primaryType="cpp:Element"
                            sling:resourceType="composum/pages/components/element/teaser"
                            icon="image"
                            link="/content/ist/composum/home/pages/components"
                            text="&lt;p>The Components module of Composum Pages enables starting with a new site immediately and without development. The responsive layout of the Components is driven by a Bootstrap based client library. The Components implementation can be used as a starting point and template for your own projects.&lt;/p>"
                            title="Standard Components"/>
                    <teaser_1533737700
                            jcr:primaryType="cpp:Element"
                            sling:resourceType="composum/pages/components/element/teaser"
                            icon="code-fork"
                            link="/content/ist/composum/home/pages/editing/sites"
                            text="&lt;p>The content of a site is published by releases. A release in Composum Pages is a view of the content tree with references to the page versions wich are part of the release. The releases are managend in the site tools.&lt;/p>"
                            title="Content Releases"/>
                    <teaser_1220510308
                            jcr:primaryType="cpp:Element"
                            sling:resourceType="composum/pages/components/element/teaser"
                            icon="lightbulb-o"
                            link="/content/ist/composum/home/pages/editing/Composum-AI"
                            text="The optional Composum-AI&amp;nbsp;supports the editor with translations, keyword suggestions, and a multi purpose content creation dialog to create content for edited text fields according to an user supplied or predefined prompt from existing text of the page or component. With the content creation dialog it is possible to collect ideas and text fragments for summaries, topical extracts, overviews, or just request suggestions to reformulate or expand text fragments, ... Your imagination is the limit."
                            title="AI Support"/>
                </column-1>
            </row-2>
            <row
                    jcr:primaryType="cpp:Container"
                    sling:resourceType="composum/pages/components/container/row"
                    columns="-12-">
                <column-0
                        jcr:primaryType="cpp:Container"
                        sling:resourceType="composum/pages/components/container/row/column"/>
            </row>
        </main>
    </jcr:content>
    <editing/>
    <components/>
    <development/>
    <setup/>
</jcr:root>
